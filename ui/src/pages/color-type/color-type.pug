      //- right side

  +layout__container({direction: 'column'})
    +layout__container({padding_top: '2_4', height_max: '21_2'})
      +layout__container({display: 'inline', width_max: '22', text_align: 'right', color: 'dark_25', weight: 400,  text_transform: 'Yes'})
        h1 h1
      +layout__container({display: 'inline', margin_left: '2_2', width_max: '64'})
        h1 This one is the sub-section or widget title
    +layout__container({height_max: '14_3'})
      +layout__container({display: 'inline', width_max: '22', text_align: 'right', color: 'dark_25', weight: 400, text_transform: 'Yes'})
        h2 h2
      +layout__container({display: 'inline', margin_left: '2_2', width_max: '54'})
        h2 Next one is the item title inside widgets
    +layout__container({height_max: '10'})
      +layout__container({display: 'inline', width_max: '22', text_align: 'right', color: 'dark_25', weight: 400})
        h3 h3
      +layout__container({display: 'inline', margin_left: '2_2', width_max: '54'})
        h3 This is a label or CTA text
    +layout__container()
      +layout__container({display: 'inline', width_max: '22', text_align: 'right', color: 'dark_25', weight: 400})
        span Body
      +layout__container({display: 'inline', margin_left: '2_2', width_max: '44'})
        span This is the body text which is used for most of the design, like paragraphs, lists, etc.

