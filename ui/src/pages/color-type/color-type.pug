        +layout__container({padding_bottom: '0_3', weight: 400})
          h2 #1F2041
    +layout__container({margin_bottom: '1_45'})
      +rectangle({theme: 'dark-75'})
      +layout__container({direction: 'column', padding_left: '2_9', justify: 'evenly'})
        +layout__container({padding_top: '0_7'})
          h2 Dark Shade 75%
        +layout__container({padding_bottom: '0_3', weight: 400})
          h2 #1F2041
    +layout__container({margin_bottom: '1_45'})
      +rectangle({theme: 'dark-50'})
      +layout__container({direction: 'column', padding_left: '2_9', justify: 'evenly'})
        +layout__container({padding_top: '0_7'})
          h2 Dark Shade 50%
        +layout__container({padding_bottom: '0_3', weight: 400})
          h2 #1F2041
    +layout__container({margin_bottom: '1_45'})
      +rectangle({theme: 'dark-25'})
